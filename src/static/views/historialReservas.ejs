<%- include('partials/header'); %>

        <!--Body -->
    <body>
      <main>
        <br>
        <br>
        <br>
        <br>
        <div id="Servicios">
            
            <br>
            <div class="container" >
              <div class="row justify-content-center" >
                <div class=" col-lg-9 col-md-8 col-sm-12 col-8" id="formReserva">
                    <div class="text-center pt-5">
                        <h2 id="Color-titulo">Historial de Reservas</h2>
                        <hr>
                    </div>
                    
                    <br>
                    <table class="table" id="tablaHistorial">
                        <thead class="table-light" id="theader">
                          <tr>
                            <th scope="col">Fecha</th>
                            <th scope="col">Motivo</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Rut</th>
                            <th scope="col">Documento</th>
                            <th scope="col">Herramientas</th>
                          </tr>
                        </thead>
                        <tbody id="tbody">
                          <% for(let i = 0; i < reservas.length; i++) { %>
                            
                          <tr>
                            <th scope="row"><%= reservas[i].fecha_hora %></th>
                            <td><%= reservas[i].motivo %></td>
                            <td><%= reservas[i].estado %></td>
                            <td><%= reservas[i].usuario_rut %></td>
                            <td><%= reservas[i].nombre_tramite %></td>
                            <td><a href="/modificarReserva/<%=reservas[i].cod_reserva%>" class="btn btn-info" id="btnModificar">Modificar</a>                              <form action="/historialReservas/<%=reservas[i].cod_reserva%>" method="post" id="btnEliminar"><input  type="submit" class="btn btn-danger" value="Eliminar"></input></form></td>
                          </tr>
  
                          <% } %>
                          
                        </tbody>
                     
                    </table>
                    <br>
                    <br>
                </div>
              </div>
                
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
        </div>

      </main>

      <!--FOOTER -->
      <%- include('partials/footer'); %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
  </body>
</html>